@model IEnumerable<BeerV1.Models.Beer>

@{
    ViewBag.Title = "Index";
}

<style>

    #page {
        text-align: center;
    }

    h2 {
        border-bottom: solid;
        padding-bottom: 1%;
        margin-top: 1%;
    }

    a {
        color: white;
    }

        a:hover {
            color: white;
            text-decoration: none;
        }

</style>

<body id="page">
    <div class="container-fluid ">
        <div class="form-row ">
            <div class="form-group col-md-12 bg-warning">
                <h2><img src="~/Images/generalBeer.jpg" />  <span class="text-primary"> <b>Browse by Beer's Color</b> </span>  <img src="~/Images/generalBeer.jpg" /></h2>
            </div>
        </div>
        <div class="form-row">
            <div id="allBeers" class="form-group col-md-12">
                <div class="btn btn-info btn-lg">@Html.ActionLink("All Beers", "AllBeers")</div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <div class="form-row">
        <div class="form-group col-md-4">
            <div class="btn btn-danger btn-lg">@Html.ActionLink("Red Beers", "RedBeers")</div>
        </div>
        <div class="form-group col-md-4">
            <div class="btn btn-lg" style="background-color: black">@Html.ActionLink("Dark Beers", "DarkBeers")</div>
        </div>
        <div class="form-group col-md-4">
            <div class="btn btn-warning btn-lg">@Html.ActionLink("Yellow Beers", "YellowBeers")</div>
        </div>
    </div>
</body>




